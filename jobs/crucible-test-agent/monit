check process crucible-test-agent
  with pidfile /var/vcap/sys/run/crucible/crucible-test-agent/server.pid
  start program "/var/vcap/packages/crucible/bin/crucible start -j crucible-test-agent -c /var/vcap/jobs/crucible-test-agent/config/server.yml"
  stop program "/var/vcap/packages/crucible/bin/crucible stop -j crucible-test-agent -c /var/vcap/jobs/crucible-test-agent/config/server.yml"
  group vcap

check process alt-crucible-test-agent
  with pidfile /var/vcap/sys/run/crucible/crucible-test-agent/alt-server.pid
  start program "/var/vcap/packages/crucible/bin/crucible start -j crucible-test-agent -c /var/vcap/jobs/crucible-test-agent/config/alt-server.yml"
  stop program "/var/vcap/packages/crucible/bin/crucible stop -j crucible-test-agent -c /var/vcap/jobs/crucible-test-agent/config/alt-server.yml"
  group vcap
